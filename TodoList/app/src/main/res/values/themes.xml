<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TodoList" parent="Base.Theme.TodoList" />

    <style name="Theme.TodoList.CategoryButtonStyle">
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/category_button</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TodoList.OptionButtonStyle">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/option_button</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.TodoList.ScrollViewStyle">
        <item name="android:fadingEdgeLength">40dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.TodoList.KeywordButtonStyle">
        <item name="android:background">@drawable/keyword_button</item>
        <item name="minWidth">0dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/violet_245</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TodoList.DialogPositiveButtonStyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/dialog_positive_button</item>
        <item name="android:textColor">@color/bright_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TodoList.DialogNegativeButtonStyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/dialog_negative_button</item>
        <item name="android:textColor">@color/bright_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TodoList.DialogInnerButtonStyle">
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/dialog_inner_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textColor">@color/bright_black</item>
    </style>

    <style name="Theme.TodoList.DialogInnerEditTextStyle">
        <item name="android:minWidth">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/dialog_inner_edittext</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textColor">@color/bright_black</item>
    </style>
    <style name="Theme.TodoList.DialogInnerMiniTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="Theme.TodoList.Category_button_style">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/option_button</item>
    </style>
</resources>