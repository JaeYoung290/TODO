<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TodoList" parent="Base.Theme.TodoList" />

    <style name="Theme.TodoList.category_button_style">
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/category_buttom</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TodoList.option_button_style">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/option_button</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.TodoList.scroll_view_style">
        <item name="android:fadingEdgeLength">40dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.TodoList.keyword_button_style">
        <item name="android:background">@drawable/keyword_buttom</item>
        <item name="minWidth">0dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/violet_245</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>